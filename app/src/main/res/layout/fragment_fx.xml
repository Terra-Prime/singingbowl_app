<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Channel 1 FX -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANNEL 1"
            android:textColor="@color/channel1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <include layout="@layout/channel_fx_controls"
            android:id="@+id/fx_ch1"/>

        <!-- LFO Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Rate"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoRate1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="5"
                android:progressTint="@color/channel1"
                android:thumbTint="@color/channel1"/>
            <TextView
                android:id="@+id/txtLfoRate1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.5 Hz"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- LFO Depth -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Depth"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoDepth1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="30"
                android:progressTint="@color/channel1"
                android:thumbTint="@color/channel1"/>
            <TextView
                android:id="@+id/txtLfoDepth1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekVolume1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/channel1"
                android:thumbTint="@color/channel1"/>
            <TextView
                android:id="@+id/txtVolume1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Channel 2 FX -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANNEL 2"
            android:textColor="@color/channel2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- LFO Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Rate"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoRate2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="5"
                android:progressTint="@color/channel2"
                android:thumbTint="@color/channel2"/>
            <TextView
                android:id="@+id/txtLfoRate2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.5 Hz"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- LFO Depth -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Depth"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoDepth2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="30"
                android:progressTint="@color/channel2"
                android:thumbTint="@color/channel2"/>
            <TextView
                android:id="@+id/txtLfoDepth2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekVolume2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/channel2"
                android:thumbTint="@color/channel2"/>
            <TextView
                android:id="@+id/txtVolume2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Channel 3 FX -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANNEL 3"
            android:textColor="@color/channel3"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- LFO Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Rate"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoRate3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="5"
                android:progressTint="@color/channel3"
                android:thumbTint="@color/channel3"/>
            <TextView
                android:id="@+id/txtLfoRate3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.5 Hz"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- LFO Depth -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Depth"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoDepth3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="30"
                android:progressTint="@color/channel3"
                android:thumbTint="@color/channel3"/>
            <TextView
                android:id="@+id/txtLfoDepth3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekVolume3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/channel3"
                android:thumbTint="@color/channel3"/>
            <TextView
                android:id="@+id/txtVolume3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Channel 4 FX -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHANNEL 4"
            android:textColor="@color/channel4"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- LFO Rate -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Rate"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoRate4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="5"
                android:progressTint="@color/channel4"
                android:thumbTint="@color/channel4"/>
            <TextView
                android:id="@+id/txtLfoRate4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.5 Hz"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- LFO Depth -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="LFO Depth"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekLfoDepth4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="30"
                android:progressTint="@color/channel4"
                android:thumbTint="@color/channel4"/>
            <TextView
                android:id="@+id/txtLfoDepth4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="30%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekVolume4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/channel4"
                android:thumbTint="@color/channel4"/>
            <TextView
                android:id="@+id/txtVolume4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- BGM Controls -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BGM CONTROLS"
            android:textColor="@color/bgm"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- BGM Volume -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekBgmVolume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressTint="@color/bgm"
                android:thumbTint="@color/bgm"/>
            <TextView
                android:id="@+id/txtBgmVolume"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Fade In -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Fade In"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekFadeIn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/bgm"
                android:thumbTint="@color/bgm"/>
            <TextView
                android:id="@+id/txtFadeIn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.0 s"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Fade Out -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Fade Out"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
            <SeekBar
                android:id="@+id/seekFadeOut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/bgm"
                android:thumbTint="@color/bgm"/>
            <TextView
                android:id="@+id/txtFadeOut"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0.0 s"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="end"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
